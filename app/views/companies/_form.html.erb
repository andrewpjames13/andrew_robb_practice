<%= form_for @company do |f| %>
  <div class="form-group">
    <div class="field">
      <%= f.label :name %>
      <div class='form-controls'>
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :suffix %>
      <div class='form-controls'>
        <%= f.text_field :suffix, :class => 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :catch_phrase %>
      <div class='form-controls'>
        <%= f.text_field :catch_phrase, :class => 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :email %>
      <div class='form-controls'>
        <%= f.email_field :email, :class => 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :start_date %>
      <div class='form-controls'>
        <%= f.date_select :start_date, :class => 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :industry %>
        <div class='form-controls'>
          <%= f.text_field :industry, :class => 'form-control' %>
        </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-4">
      <% if @company.id == nil %>
        <%= f.submit 'Create Company', class: 'btn btn-primary'%>
      <% else %>
        <%= f.submit 'Update Company', class: 'btn btn-primary'%>
      <% end %>
    </div>
  </div>
<% end %>
