<div class="page-header">
  <h1>Companies
  <%= link_to "Create", new_company_path, class: "btn btn-info pull-right" %>
  </h1>
</div>

<table class="table table-striped">
  <thead>
    <th>Name</th>
    <th>Suffix</th>
    <th>Catch Phrase</th>
    <th>Email</th>
    <th>Start Date</th>
    <th>Industry</th>
  </thead>
  <tbody>
      <% @companies.each do |company| %>
      <tr>
      <td> <%= link_to company.name, company_path(company) %></td>
      <td> <%= company.suffix %></td>
      <td> <%= company.catch_phrase %></td>
      <td> <%= company.email %></td>
      <td> <%= company.start_date %></td>
      <td> <%= company.industry %></td>
      <td> <%= link_to "Edit", edit_company_path(company), class: "btn btn-info" %>
      </tr>
      <% end %>
  </tbody>
</table>
